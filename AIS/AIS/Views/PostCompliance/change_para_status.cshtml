@{
    ViewData["Title"] = "Change Para Status";
    Layout = "_Layout";
}
<script>
    var g_obsList = [];
    var g_newComId = 0;

    function getParas() {
        $('#paraTable tbody').empty();
        $.ajax({
            url: g_asiBaseURL + "/ApiCalls/get_paras_for_status_change",
            type: "POST",
            data: {
                'ENTITY_ID': $('#entitySelectField').val()
            },
            cache: false,
            success: function (data) {
                g_obsList = data;
                $.each(data, function (idx, child) {
                    $('#paraTable tbody').append('<tr>' +
                        '<td>' + child.audit_year + '</td>' +
                        '<td>' + child.para_no + '</td>' +
                        '<td>' + child.heading + '</td>' +
                        '<td>' + child.risk + '</td>' +
                        '<td>' + child.para_status + '</td>' +
                        '<td class="text-center"><a class="text-primary" style="cursor:pointer" onclick="paraText(\'' + child.com_id + '\')">View Para Text</a></td>' +
                        '<td class="text-center"><a class="text-danger" style="cursor:pointer" onclick="openChange(\'' + child.com_id + '\')">Change Status</a></td>' +
                        '</tr>');
                });
            },
            dataType: "json"
        });
    }

    function paraText(com_id) {
        $('#paraTextDisplayModel').modal('show');
        $('#paraTextModelPanel').empty();
        $.ajax({
            url: g_asiBaseURL + "/ApiCalls/get_new_para_text",
            type: "POST",
            data: { 'COM_ID': com_id },
            cache: false,
            success: function (data) {
                $('#paraTextModelPanel').html(data);
            }
        });
    }

    function openChange(com_id) {
        g_newComId = com_id;
        $('#actionSelect').val('S');
        $('#statusSelect').val('9');
        $('#Reason').val('');
        $('#process_detail').modal('show');
    }

    function Publishchange() {
        if ($('#Reason').val() === "") {
            alert("Please enter remarks");
            return;
        }
        var act = $('#actionSelect').val();
        var status = $('#statusSelect').val();
        if (act === 'D') status = 0;
        $.ajax({
            url: g_asiBaseURL + "/ApiCalls/Add_Para_Change_status_Request",
            type: "POST",
            data: {
                'COM_ID': g_newComId,
                'NEW_STATUS': status,
                'REMARKS': $('#Reason').val(),
                'Action_IND': act
            },
            cache: false,
            success: function (data) {
                alert(data.Message);
                $('#process_detail').modal('hide');
                getParas();
            },
            dataType: "json"
        });
    }
</script>

<div class="row">
    <div class="col-md-12 mt-3">
        <h3 style="display:block;color:#45c545;">Change Para Status</h3>
    </div>
    <div class="row col-md-12 mt-3">
        <div class="col-md-2">
            <label><b>Entity:</b></label>
        </div>
        <div class="col-md-10">
            <select id="entitySelectField" onchange="getParas();" class="form-control form-select">
                <option value="0" id="0">--Select Audit Entity--</option>
                @{
                    if (ViewData["EntitiesList"] != null)
                    {
                        foreach (var item in (dynamic)(ViewData["EntitiesList"]))
                        {
                            <option value="@item.ENTITY_ID" id="@item.ENTITY_ID">@item.ENTITY_NAME</option>
                        }
                    }
                }
            </select>
        </div>
    </div>
    <div class="row col-md-12 mt-3">
        <table id="paraTable" class="table table-hover table-bordered table-striped">
            <thead style="background-color:#19875478;">
                <tr>
                    <th class="col-md-auto">Audit Year</th>
                    <th class="col-md-auto">Para No.</th>
                    <th class="col-md-auto">Heading</th>
                    <th class="col-md-auto">Risk</th>
                    <th class="col-md-auto">Para Status</th>
                    <th class="col-md-auto">View Para Text</th>
                    <th class="col-md-auto">Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!-- Modal for Change Status -->
<div id="process_detail" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document" style="min-width:90%;">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Change Para Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="mt-3 modal-body">
                <form>
                    <div class="mt-2 col-md-12">
                        <label class="font-weight-bold">Action</label>
                    </div>
                    <div class="mt-2 col-md-12">
                        <select id="actionSelect" class="form-control form-select">
                            <option value="S">Settle</option>
                            <option value="U">Un-Settle</option>
                            <option value="D">Delete Duplicate</option>
                        </select>
                    </div>
                    <div class="mt-2 col-md-12">
                        <label class="font-weight-bold">New Status</label>
                    </div>
                    <div class="mt-2 col-md-12">
                        <select id="statusSelect" class="form-control form-select">
                            <option value="9">Settled</option>
                            <option value="8">Un-Settled</option>
                        </select>
                    </div>
                    <div class="mt-3 col-md-12">
                        <label class="font-weight-bold">Remarks</label>
                    </div>
                    <div class="mt-2 col-md-12">
                        <textarea class="form-control" id="Reason"></textarea>
                    </div>
                </form>
            </div>
            <div class="mt-3 modal-footer">
                <button id="Publishchange" type="button" class="btn btn-danger" onclick="Publishchange();">Save changes</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Para Text -->
<div id="paraTextDisplayModel" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document" style="min-width:90%;">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Para Text</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="mt-3 modal-body">
                <div id="paraTextModelPanel"></div>
            </div>
            <div class="mt-3 modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
