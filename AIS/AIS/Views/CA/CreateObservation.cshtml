@model AIS.Models.CA.CAObservationModel
@{
    ViewData["Title"] = "Add New Audit Observation";
    Layout = "_Layout";
}

<h2>Add New Audit Observation</h2>
<form asp-action="CreateObservation" enctype="multipart/form-data" method="post">
    <div>
        <label>OM/Observation ID (Stage 1):</label>
        <input asp-for="OMObservationId" class="form-control" required />
    </div>
    <div>
        <label>Observation Text:</label>
        <textarea asp-for="ObservationText" class="form-control" required></textarea>
    </div>
    <div>
        <label>Supporting Documents:</label>
        <input asp-for="SupportingDocs" type="file" class="form-control" />
    </div>
    <div>
        <label>Assign to Division:</label>
        <select asp-for="AssignedDivisionId" asp-items="Model.Divisions" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>
